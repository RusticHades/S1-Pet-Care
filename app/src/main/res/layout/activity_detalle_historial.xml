<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorFondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Fecha -->
        <TextView
            android:id="@+id/textViewFechaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/colorPrincipal"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Motivo -->
        <TextView
            android:id="@+id/textViewMotivoDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/negro"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewFechaDetalle" />

        <!-- Diagnóstico -->
        <TextView
            android:id="@+id/textViewDiagnosticoDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/negro"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMotivoDetalle" />

        <!-- Tratamiento -->
        <TextView
            android:id="@+id/textViewTratamientoDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/negro"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDiagnosticoDetalle" />

        <!-- Observaciones -->
        <TextView
            android:id="@+id/textViewObservacionesDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/negro"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTratamientoDetalle" />

        <!-- Peso -->
        <TextView
            android:id="@+id/textViewPesoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/icon_peso"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrincipal"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/negro"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewObservacionesDetalle" />

        <!-- Temperatura -->
        <TextView
            android:id="@+id/textViewTemperaturaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:drawableLeft="@drawable/icon_temperatura"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrincipal"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/negro"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/textViewPesoDetalle"
            app:layout_constraintTop_toTopOf="@id/textViewPesoDetalle" />

        <!-- Vacunas -->
        <TextView
            android:id="@+id/textViewVacunasDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/icon_vacuna"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrincipal"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/negro"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPesoDetalle" />

        <!-- Botón Volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonVolverDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorPrincipal"
            android:text="Volver"
            android:textColor="@color/blanco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewVacunasDetalle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>