<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorFondo">

    <TextView
        android:id="@+id/titleCitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial Medico de la mascota"
        android:textColor="@color/colorSpam"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSinHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay historial mÃ©dico registrado"
        android:textColor="@color/colorSpam"
        android:textSize="24sp"
        android:fontFamily="@font/nunito_black"
        android:visibility="gone"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCitas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistorialMedicoInicio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCitas" />

</androidx.constraintlayout.widget.ConstraintLayout>